<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/all_match_parent"
    android:background="@color/bg_background">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="140.0dip"
            android:background="@mipmap/bg_mine">

            <ImageView
                android:id="@+id/messageImg"
                android:layout_width="30.0dip"
                android:layout_height="30.0dip"
                android:layout_gravity="right"
                android:layout_marginRight="10.0dip"
                android:layout_marginTop="10.0dip"
                android:padding="5.0dip"
                android:src="@mipmap/icon_message" />

            <ImageView
                android:id="@+id/settingImg"
                android:layout_width="30.0dip"
                android:layout_height="30.0dip"
                android:layout_gravity="right"
                android:layout_marginRight="40.0dip"
                android:layout_marginTop="10.0dip"
                android:padding="5.0dip"
                android:src="@mipmap/mine_book_setting" />

            <View
                android:layout_width="55.0dip"
                android:layout_height="55.0dip"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20.0dip"
                android:background="@drawable/shape_round_white" />

            <ImageView
                android:id="@+id/iconImg"
                android:layout_width="53.0dip"
                android:layout_height="53.0dip"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="21.0dip"
                android:scaleType="fitXY"
                android:src="@mipmap/default_icon" />

            <TextView
                android:id="@+id/nameTx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="80.0dip"
                android:textColor="@color/tx_black"
                android:textSize="16.0sp" />

            <TextView
                android:id="@+id/walletTx"
                android:layout_width="fill_parent"
                android:layout_height="30.0dip"
                android:layout_gravity="bottom"
                android:background="@color/transhalf_white"
                android:gravity="center"
                android:textColor="@color/tx_black"
                android:textSize="12.0sp" />
        </FrameLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="30.0dip"
            android:layout_marginTop="8.0dip"
            android:background="@color/bg_white"
            android:gravity="center_vertical"
            android:paddingLeft="15.0dip"
            android:text="图书交易"
            android:textColor="@color/tx_black"
            android:textSize="14.0sp" />

        <View style="@style/view_horizontal" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="95.0dip"
            android:background="@color/bg_white"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/releaseRt"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0">

                <ImageView
                    android:id="@+id/releaseImg"
                    android:layout_width="33.0dip"
                    android:layout_height="33.0dip"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20.0dip"
                    android:src="@mipmap/mine_release" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/releaseImg"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10.0dip"
                    android:text="在架"
                    android:textSize="12.0sp" />
            </RelativeLayout>

            <View style="@style/view_vertical" />

            <RelativeLayout
                android:id="@+id/saleRt"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0">

                <FrameLayout
                    android:id="@+id/saleFt"
                    android:layout_width="45.0dip"
                    android:layout_height="33.0dip"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20.0dip">

                    <ImageView
                        android:id="@+id/saleImg"
                        android:layout_width="33.0dip"
                        android:layout_height="33.0dip"
                        android:layout_gravity="center_horizontal"
                        android:src="@mipmap/mine_sale" />

                    <ImageView
                        android:id="@+id/saleNumNewImg"
                        android:layout_width="12.0dip"
                        android:layout_height="12.0dip"
                        android:layout_gravity="right"
                        android:src="@drawable/shape_round_red"
                        android:visibility="gone" />
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/saleFt"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10.0dip"
                    android:text="售出"
                    android:textSize="12.0sp" />
            </RelativeLayout>

            <View style="@style/view_vertical" />

            <RelativeLayout
                android:id="@+id/buyRt"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0">

                <ImageView
                    android:id="@+id/buyImg"
                    android:layout_width="33.0dip"
                    android:layout_height="33.0dip"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20.0dip"
                    android:src="@mipmap/mine_buy" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/buyImg"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10.0dip"
                    android:text="买入"
                    android:textSize="12.0sp" />
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="30.0dip"
            android:layout_marginTop="8.0dip"
            android:background="@color/bg_white"
            android:gravity="center_vertical"
            android:paddingLeft="15.0dip"
            android:text="图书漂流"
            android:textColor="@color/tx_black"
            android:textSize="14.0sp" />

        <View style="@style/view_horizontal" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="95.0dip"
            android:background="@color/bg_white"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/borrowRt"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0">

                <ImageView
                    android:id="@+id/borrowImg"
                    android:layout_width="33.0dip"
                    android:layout_height="33.0dip"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20.0dip"
                    android:src="@mipmap/mine_borrow" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/borrowImg"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10.0dip"
                    android:text="借阅记录"
                    android:textSize="12.0sp" />
            </RelativeLayout>

            <View style="@style/view_vertical" />

            <RelativeLayout
                android:id="@+id/shareRt"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0">

                <ImageView
                    android:id="@+id/shareImg"
                    android:layout_width="33.0dip"
                    android:layout_height="33.0dip"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20.0dip"
                    android:src="@mipmap/mine_share" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/shareImg"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10.0dip"
                    android:text="我的共享"
                    android:textSize="12.0sp" />
            </RelativeLayout>

            <View style="@style/view_vertical" />

            <RelativeLayout
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/recommendRt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="12.0dip"
            android:layout_marginTop="12.0dip">

            <TextView
                android:id="@+id/recommendTx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="推荐给朋友"
                android:textSize="12.0sp" />

            <ImageView
                android:layout_width="12.0dip"
                android:layout_height="12.0dip"
                android:layout_centerVertical="true"
                android:layout_marginRight="5.0dip"
                android:layout_toLeftOf="@id/recommendTx"
                android:src="@mipmap/icon_mine_recommend" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="3.0dip"
        android:layout_gravity="bottom"
        android:background="@mipmap/shawdow" />
</FrameLayout>